<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:WorkstationManagment.UI.ViewModels"
             x:Class="WorkstationManagment.UI.Views.LoginView"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DataType="vm:LoginViewModel">

  <Border BorderBrush="Gray" BorderThickness="2" Padding="40" CornerRadius="10">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
      <TextBox Watermark="Username" Text="{Binding Username}" />
      <TextBox Watermark="Password" Text="{Binding Password}" PasswordChar="*" />
      <Button Content="Login" Command="{Binding LoginCommand}" />
    </StackPanel>
  </Border>
</UserControl>
